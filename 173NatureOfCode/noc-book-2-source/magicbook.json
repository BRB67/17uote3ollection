{
  "title": "The Nature of Code",
  "destination": "build/:build",
  "files": [
    "content/*.html"
  ],
  "addPlugins": [
    "./plugins/addP5.js",
    "magicbook-codesplit",
    "magicbook-katex",
    "magicbook-webpack"
  ],
  "builds": [
    {
      "format": "pdf",
      "prince": {
        "log": "errors.txt",
        "timeout": 300000
      },
      "layout": "layouts/pdf.html",
      "stylesheets": {
        "files": [
          "stylesheets/pdf.scss"
        ]
      },
      "images": {
        "files": "context/noc_pdf/imgs/**/*.*"
      },
      "fonts": {
        "destination": "assets/fonts/"
      }
    },
    {
      "format":"html",
       "layout":"layouts/html.html",
       "stylesheets":{
          "files": [ 
            "stylesheets/html.scss"
          ],
          "destination" : "stylesheets/"
       },
       "javascripts" : {
         "files" : [ 
           "context/noc_html/javascripts/*.js"
          ],
         "destination" : "javascripts/"
       },
       "images" : {
          "files" : "context/noc_html/imgs/**/*.*",
          "destination" : "imgs/"
       },
       "fonts" : {
          "destination" : "fonts/"
       }
   }
  ]
}
